<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daoshengwanwu.android.tourassistant.activity.MyTeamActivity"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/myTeam_top"
        android:orientation="horizontal"
        android:background="#F8F8F8">
       <ImageView
           android:layout_width="30dp"
           android:layout_height="wrap_content"
           android:src="@drawable/back"
           android:layout_gravity="center"
           android:id="@+id/myTeam_back"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的队伍"
            android:textSize="20sp"
            android:textColor="#4d4d4d"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/myTeam_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="50dp">
        <Button
            android:id="@+id/myTeam_button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/shap_button"
            android:text="发出集合提示"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#4d4d4d"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/myTeam_button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/shap_button2"
            android:text="解散队伍"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/myTeam_top"
        android:layout_above="@id/myTeam_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/myTeam_center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#EDEDED"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="队名："
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#4d4d4d"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="探游小队"
                android:id="@+id/myTeam_name"
                android:textSize="18sp"
                android:textColor="#4d4d4d"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#EDEDED"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="队长："
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#4d4d4d"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/myTeam_leader"
                android:text="白浩然"
                android:textSize="18sp"
                android:textColor="#4d4d4d"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:orientation="vertical"
            android:background="#EDEDED">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成员："
            android:textSize="18sp"
            android:textColor="#4d4d4d" />
            <ListView
                android:divider="#EDEDED"
                android:background="#00000000"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/myTeam_listView">
            </ListView>
        </LinearLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:baselineAligned="false"
            android:background="#EDEDED"
            android:id="@+id/addmember"
            android:longClickable="false"
            android:layout_marginTop="1dp">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="生成队伍二维码"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#4d4d4d"
                android:id="@+id/textView3" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/more"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:id="@+id/imageView" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#EDEDED"
            android:orientation="horizontal"
            android:id="@+id/myTeam_transfer">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="转让队长"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#4d4d4d"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/more"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:id="@+id/myTeam_more"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
