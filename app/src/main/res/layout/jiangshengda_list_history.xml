<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <RelativeLayout
                android:layout_marginTop="@dimen/santa_10dp"
                android:layout_marginBottom="@dimen/santa_10dp"
                android:layout_width="0dip"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/His_Img"
                    android:src="@drawable/history"
                    android:layout_width="@dimen/santa_20dp"
                    android:layout_height="@dimen/santa_20dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/santa_10dp"
                android:layout_marginBottom="@dimen/santa_10dp"
                android:layout_width="0dip"
                android:layout_weight="13">
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/santa_initialization_text"
                    android:id="@+id/His_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>