<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/home_rv_second_item_root"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/near_by_spot_recommend_text"
        android:text="附近景区推荐"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:textColor="@color/bhr_tabs_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/near_by_spot_recommend_img"
        android:layout_toEndOf="@id/near_by_spot_recommend_text"
        android:src="@drawable/like"
        android:layout_marginStart="4dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>