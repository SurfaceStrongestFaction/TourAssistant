<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jiangshengda_activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.daoshengwanwu.android.tourassistant.jiangshengda.SearchActivity"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/santa_40dp"
        android:background="@drawable/search_bar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Srch_back_btn"
            android:layout_width="@dimen/santa_25dp"
            android:layout_height="@dimen/santa_25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/santa_10dp"
            android:src="@drawable/return1" />

        <ImageView
            android:layout_width="@dimen/santa_20dp"
            android:layout_height="@dimen/santa_20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/santa_30dp"
            android:src="@drawable/search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/santa_5dp"
            android:layout_marginLeft="@dimen/santa_5dp"
            android:layout_marginRight="@dimen/santa_20dp"
            android:layout_marginTop="@dimen/santa_10dp"
            android:background="@null" />
    </LinearLayout>

    <TextView
        android:id="@+id/His_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/santa_10dp"
        android:layout_marginTop="@dimen/santa_10dp"
        android:text="@string/santa_history" />

    <ListView
        android:id="@+id/Lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/santa_10dp"
        android:layout_marginTop="@dimen/santa_10dp"
        android:alpha="0.7"
        android:background="#ffffff"></ListView>

    <RelativeLayout
        android:id="@+id/Clean_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/santa_40dp"
        android:alpha="0.7"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/santa_clean"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>
