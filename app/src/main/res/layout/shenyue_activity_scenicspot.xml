<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:id="@+id/scenicspot_top_ll"
        android:orientation="horizontal"
        android:background="@color/pale_color">
        <ImageView
            android:layout_width="@dimen/scenicspot_backimg_width"
            android:layout_height="wrap_content"
            android:src="@drawable/return1"
            android:layout_gravity="center"
            android:id="@+id/scenicspot_back_img"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/sy_scenicspot_title"
            android:textSize="@dimen/scenicspot_toptv_size"
            android:textColor="@color/black_color"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="@dimen/scenicspot_backimg_width"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/scenicspot_imgrl_height">
                    <ImageView
                        android:id="@+id/scenicspot_show_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/imperialpalace"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:id="@+id/scenicspot_ellipse_img"
                        android:layout_width="@dimen/scenicspot_ellipseimg_width"
                        android:layout_height="@dimen/scenicspot_ellipseimg_height"
                        android:layout_marginLeft="@dimen/scenicspot_ellipseimg_marginleft"
                        android:layout_marginBottom="@dimen/scenicspot_ellipseimg_marginbottom"
                        android:scaleType="fitXY"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.7"
                        android:src="@drawable/ellipse"/>
                    <ImageView
                        android:id="@+id/scenicspot_picture_img"
                        android:layout_width="@dimen/scenicspot_pictureimg_width"
                        android:layout_height="wrap_content"
                        android:src="@drawable/picture"
                        android:layout_alignTop="@+id/scenicspot_ellipse_img"
                        android:layout_alignBottom="@+id/scenicspot_ellipse_img"
                        android:layout_alignLeft="@+id/scenicspot_ellipse_img"
                        android:layout_marginTop="@dimen/scenicspot_pictureimg_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_pictureimg_marginbottom"
                        android:layout_marginLeft="@dimen/scenicspot_pictureimg_marginleft"/>
                    <TextView
                        android:id="@+id/scenicspot_picturenum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/scenicspot_picturenumtv_size"
                        android:layout_alignTop="@+id/scenicspot_picture_img"
                        android:layout_alignBottom="@id/scenicspot_picture_img"
                        android:gravity="center"
                        android:layout_toRightOf="@id/scenicspot_picture_img"
                        android:text="10张"/>
                    <RelativeLayout
                        android:id="@+id/scenicspot_picture_rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/scenicspot_ellipse_img"
                        android:layout_alignBottom="@id/scenicspot_ellipse_img"
                        android:layout_alignLeft="@id/scenicspot_ellipse_img"
                        android:layout_alignRight="@id/scenicspot_ellipse_img">
                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/scenicspot_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/scenicspot_nametv_size"
                    android:text="故宫"
                    android:layout_marginTop="@dimen/scenicspot_nametv_margintop"
                    android:layout_marginBottom="@dimen/scenicspot_nametv_marginbottom"
                    android:layout_marginLeft="@dimen/scenicspot_nametv_marginleft"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pale_color">
                    <ImageView
                        android:id="@+id/scenicspot_position_img"
                        android:layout_width="@dimen/scenicspot_positionimg_width"
                        android:layout_height="@dimen/scenicspot_positionimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/scenicspot_nametv_marginleft"
                        android:src="@drawable/map"
                        android:layout_marginTop="@dimen/scenicspot_positionimg_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_positionimg_marginbottom"/>
                    <TextView
                        android:id="@+id/scenicspot_position_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京市东城区景山前街4号"
                        android:layout_toRightOf="@id/scenicspot_position_img"
                        android:layout_centerVertical="true"
                        android:textColor="@color/darkgrey_color"
                        android:textSize="@dimen/scenicspot_positiontv_size"
                        android:layout_marginLeft="@dimen/scenicspot_positiontv_marginleft"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pale_color"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/scenicspot_recommendll_margintop">
                    <TextView
                        android:id="@+id/scenicspot_recommend_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sy_scenicspot_recommend"
                        android:textSize="@dimen/scenicspot_recommendtv_size"
                        android:layout_marginTop="@dimen/scenicspot_recommendtv_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_recommendtv_marginbottom"
                        android:layout_marginLeft="@dimen/scenicspot_recommendtv_marginleft"/>
                    <ImageView
                        android:id="@+id/scenicspot_star1_img"
                        android:layout_width="@dimen/scenicspot_starimg_width"
                        android:layout_height="@dimen/scenicspot_starimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/scenicspot_starimg_margintop"
                        android:layout_marginRight="@dimen/scenicspot_starimg_marginright"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/scenicspot_star2_img"
                        android:layout_width="@dimen/scenicspot_starimg_width"
                        android:layout_height="@dimen/scenicspot_starimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/scenicspot_starimg_margintop"
                        android:layout_marginRight="@dimen/scenicspot_starimg_marginright"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/scenicspot_star3_img"
                        android:layout_width="@dimen/scenicspot_starimg_width"
                        android:layout_height="@dimen/scenicspot_starimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/scenicspot_starimg_margintop"
                        android:layout_marginRight="@dimen/scenicspot_starimg_marginright"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/scenicspot_star4_img"
                        android:layout_width="@dimen/scenicspot_starimg_width"
                        android:layout_height="@dimen/scenicspot_starimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/scenicspot_starimg_margintop"
                        android:layout_marginRight="@dimen/scenicspot_starimg_marginright"
                        android:src="@drawable/star"/>
                    <ImageView
                        android:id="@+id/scenicspot_star5_img"
                        android:layout_width="@dimen/scenicspot_starimg_width"
                        android:layout_height="@dimen/scenicspot_starimg_height"
                        android:scaleType="fitXY"
                        android:layout_marginTop="@dimen/scenicspot_starimg_margintop"
                        android:layout_marginRight="@dimen/scenicspot_starimg_marginright"
                        android:src="@drawable/star"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scenicspot_pricerl_margintop"
                    android:background="@color/pale_color">
                    <TextView
                        android:id="@+id/scenicspot_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sy_scenicspot_price"
                        android:layout_marginTop="@dimen/scenicspot_pricetv_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_pricetv_marginbottom"
                        android:layout_marginLeft="@dimen/scenicspot_pricetv_marginleft"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/scenicspot_pricetv_size"
                        />
                    <TextView
                        android:id="@+id/scenicspot_pricenum_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10元"
                        android:layout_toRightOf="@id/scenicspot_price_tv"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/scenicspot_pricetv_size"
                        android:layout_marginLeft="@dimen/scenicspot_pricenumtv_marginleft"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scenicspot_timerl_margintop"
                    android:background="@color/pale_color">
                    <TextView
                        android:id="@+id/scenicspot_time_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sy_scenicspot_time"
                        android:layout_marginLeft="@dimen/scenicspot_timetv_marginleft"
                        android:layout_marginTop="@dimen/scenicspot_timetv_margintop"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/scenicspot_timetv_size"
                        />
                    <TextView
                        android:id="@+id/scenicspot_timeinf_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scenicspot_time_tv"
                        android:layout_marginLeft="@dimen/scenicspot_timeinftv_marginleft"
                        android:layout_marginRight="@dimen/scenicspot_timeinftv_marginright"
                        android:layout_marginTop="@dimen/scenicspot_timeinftv_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_timeinftv_marginbottom"
                        android:textSize="@dimen/scenicspot_timetv_size"
                        android:textColor="@color/black_color"
                        android:text="旺季：\n
      4月1日-10月31日。\n
      开放时间 8:30-16:10，16:00停止售票，17:00清场。\n
淡季：\n
      11月1日-次年3月31日。\n
      开放时间 8:30-15:40，15:30停止售票，16:30清场。\n
除法定节假日和暑期（每年7月1日至8月31日）外，周一全天闭馆。\n"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/scenicspot_introducerl_margintop"
                    android:layout_marginBottom="@dimen/scenicspot_introducerl_marginbottom"
                    android:background="@color/pale_color">
                    <TextView
                        android:id="@+id/scenicspot_introduce_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/scenicspot_introducetv_marginleft"
                        android:layout_marginRight="@dimen/scenicspot_introducetv_marginright"
                        android:layout_marginTop="@dimen/scenicspot_introducetv_margintop"
                        android:layout_marginBottom="@dimen/scenicspot_introducetv_marginbottom"
                        android:textSize="@dimen/scenicspot_introducetv_size"
                        android:textColor="@color/darkgrey_color"
                        android:text="         故宫也称“紫禁城”，是明清两代的皇宫，也是中国现存最大最完整的皇家古建筑群。故宫规模宏伟，布局严整，建筑精美，富丽华贵，收藏有许多的稀世文物，是我国古代建筑、文化、艺术的精华。"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/scenicspot_go_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sy_scenicspot_btn1"
                android:textSize="@dimen/scenicspot_bottomtv_size"
                android:background="@color/blackgrey_color"
                android:gravity="center"/>
            <TextView
                android:id="@+id/scenicspot_find_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sy_scenicspot_btn2"
                android:textSize="@dimen/scenicspot_bottomtv_size"
                android:background="@color/green_color"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>